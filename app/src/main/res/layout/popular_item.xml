<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/pop_img"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@mipmap/fooditems"
            android:scaleType="centerCrop"
            app:riv_corner_radius="15dp"/>

        <TextView
            android:id="@+id/pop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popular_products"
            android:textSize="19sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_slab"/>

        <TextView
            android:id="@+id/pop_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Description"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pop_ratingBar"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/rating"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/pop_ratingVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="5.0"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_slab"/>

            <TextView
                android:id="@+id/pop_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:text="Discount 20% Off"
                android:textColor="#87CEEB"
                android:textStyle="bold"
                android:gravity="end"
                android:fontFamily="@font/roboto_slab"
                />
        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>